  <section id="features">
    
    <div class="row">
      <div class="feature-box col-lg-4">
        <h3>Easy to use.</h3>
        <p>Problems from popular online judges sorted in one place</p>
        <i class="icon fa-solid fa-circle-nodes fa-4x"></i>
      </div>
      <div class="feature-box col-lg-4">
        <h3>Sorted by Category</h3>
        <p>Solve selective problems that you're weak on</p>
        <i class="icon fa-sharp fa-solid fa-list-check fa-4x"></i>
      </div>
      <div class="feature-box col-lg-4">
        <h3>Guaranteed to work.</h3>
        <p>You'll become a better problem-solver within weeks</p>
        <i class="icon fa-solid fa-wand-sparkles fa-4x"></i>
      </div>
    </div>
  </section>


  <!-- Press -->

