<%- include("header") -%>

    <div class="container-fluid">
      <!-- Title -->

      <div class="row">
        <div class="col-lg-6 col-md">
          <h1>Practicing problem solving made easy!</h1>
          <button type="button" class="btn btn-outline-light btn-lg dw-btn"><i class="fa-sharp fa-solid fa-code"></i> <a href="/register" style="text-decoration: none;">Start learning</a></button>
          <!-- <button type="button" class="btn btn-dark btn-lg dw-btn"><i class="fa-solid fa-mobile-screen"></i> </button> -->
        </div>
      </div>
      <div class="Login">
          <div class="background">
            <!-- <div class="shape"></div>
            <div class="shape"></div> -->
        </div>
        <form class="Login-form" action="/auth" method="POST">
            <h3>Login Here</h3>

            <label for="username">Username</label>
            <input type="text" placeholder="Username" id="username" name="name">

            <label class="Login-label" for="password">Password</label>
            <input type="password" placeholder="Password" id="password" name="password">

            <button type="submit" class="Login-button">Log In</button>
